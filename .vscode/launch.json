  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach Meatman 5858",
      "port": 5858,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "restart": true
    },
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/apps/kmbx"
    }
  ]
}
